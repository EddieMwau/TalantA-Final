<Upload>:
    art_field: art_field
    name: 'upload'

    BoxLayout:
        canvas.before:
            Color:
                rgba:(1,1,1,1)
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'assets/account-background-crop.png'
        orientation: 'vertical'
        id: main_win
        space_x: self.size[0]/6

        BoxLayout:
            orientation: 'vertical'
            padding: main_win.space_x, 10
            BoxLayout:
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba:(1,1,1,.8)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                ScrollView:

                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
                        padding: main_win.space_x, 10
                        spacing: dp(15)

                        MDLabel:
                            id: info
                            text: ''
                            markup: True
                            size_hint_y: None
                            height: 20

                        MDFillRoundFlatIconButton:
                            id: btn_select
                            text: 'Select file'
                            icon: 'file'
                            pos_hint: {'center_x':.5, 'center_y': .15}
                            on_release: root.upload_clicked()
                        MDLabel:
                            id: art_field
                            text: root.labelText
                            color: 0,0,0,1
                        MDTextField:
                            id: name_field
                            hint_text: "Art name"
                        MDTextField:
                            id: des_field
                            hint_text: "Art description"
                            multiline: True

                Spinner:
                    id: type_field
                    text: 'Art type:'
                    values: 'paintings','3d models','sculptures','digital photography'
                    size_hint_y: None
                    height: dp(40)
                Label:
                    id: spaceer
                    size_hint_y: None
                    height: dp(10)
                BoxLayout:
                    orientation: 'vertical'
                    padding: 20
                    spacing: 20

                    MDFillRoundFlatIconButton:
                        id: btn_upload
                        text: 'Upload'
                        icon: 'file-upload'
                        pos_hint: {'center_x':.5, 'center_y': .15}
                        md_bg_color: 0,1,0,1
                        on_release: root.select_clicked()

                    MDFillRoundFlatIconButton:
                        id: btn_cancel
                        text: 'Cancel'
                        icon: 'cancel'
                        pos_hint: {'center_x':.5, 'center_y': .15}
                        md_bg_color: 1,0,0,1
                        on_release:root.cancel_clicked()

