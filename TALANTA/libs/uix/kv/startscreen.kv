<StartScreen>
    orientation: 'vertical'

    NavDrawer:
        id: nav_drawer

        BoxLayout:
            orientation: 'vertical'
            spacing: dp(5)

            MDToolbar:
                id: action_bar
                background_color: app.theme_cls.primary_color
                title: app.title
                left_action_items: [['menu', lambda x: nav_drawer._toggle()]]
                elevation: 10
                md_bg_color: app.theme_cls.primary_color

            ScreenManager:
                id: manager

                Login:
                    id: login

                BaseScreen:
                    id: base

                License:
                    id: license

                About:
                    id: about

                Helper:
                    id: helper

                BrowseScreen:
                    id: browse

                Account:
                    id: account

                Signup:
                    id: signup

                Upload:
                    id: upload

                Manage:
                    id: manage

                ManageArtist:
                    id: manage_artist

                FileSelect:
                    id: files

                UploadGallery:
                    id: upload_gallery

                ManageGallery:
                    id: manage_gallery

                BrowseGallery:
                    id: browse_gallery




