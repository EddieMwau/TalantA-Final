<ButtonRound@ButtonRoundForForm>:
    size_hint: None, None
    size: dp(50), dp(50)


<CircleWidget@Widget>:
    size_hint: None, None
    size: dp(20), dp(20)

    canvas:
        Color:
            rgba: app.theme_cls.primary_color
        Ellipse:
            pos: self.pos
            size: dp(20), dp(20)


<BaseScreen>:
    name: 'base'

    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: './assets/market-crop.jpg'

        BoxLayout:
            id: box_top
            orientation: 'vertical'
            size_hint: None, None
            size: self.minimum_size
            pos_hint: {'center_x': .5, 'top': 1}
            padding: dp(5)

            BoxLayout:
                spacing: dp(5)
                size_hint_y: None
                height: dp(20)

                CircleWidget:
                CircleWidget:
                Widget:

            Widget:
                size_hint_y: None
                height: dp(5)

            Label:
                markup: True
                text: '[size=50]TalantA[/size]'
                size_hint: None, None
                size: self.texture_size
                bold: True

            BoxLayout:
                spacing: dp(5)
                size_hint: None, None
                size: self.minimum_size
                orientation: 'vertical'

                Label:
                    markup: True
                    text: '[size=20]Where talent meets opportunity[/size]'
                    size_hint: None, None
                    size: self.texture_size
                    bold: True
                    italic: True

                CircleWidget:
                Label:
                    id: sp1
                    size_hint_y: None
                    height:dp(50)
                Label:
                    markup: True
                    text: '[size=20]What would you like to do?[/size]'
                    size_hint: None, None
                    size: self.texture_size
                MDFillRoundFlatButton:
                    id: login_btn
                    on_release: app.toggle_nav()
                    text: "Toggle Navigation"
                    color: 1,1,1,1
                    pos_hint: {'center_x': .5, 'center_y': .15}

            Widget:
                size_hint_y: None
                height: dp(20)