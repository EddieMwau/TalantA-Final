<ManageArtist>:
    name: 'manage_artist'

    BoxLayout:
        canvas.before:
            Color:
                rgba:(1,1,1,1)
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'assets/account-background-crop.png'
        orientation: 'vertical'
        id: main_win
        space_x: self.size[0]/6

        BoxLayout:
            orientation: 'vertical'
            padding: main_win.space_x, 10
            BoxLayout:
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba:(1,1,1,.8)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                ScrollView:

                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
                        padding: main_win.space_x, 20
                        spacing: dp(15)
                        MDLabel:
                            id: header
                            text: 'Update your profile here. Scroll to view all'
                        MDTextField:
                            id: fname_field
                            hint_text: "First Name"
                        MDTextField:
                            id: lname_field
                            hint_text: "Last Name"
                        MDTextField:
                            id: username_field
                            hint_text: "User Name"
                            text: ''

                        MDTextField:
                            id: email_field
                            hint_text: "Email Address"
                        MDTextField:
                            id: bio_field
                            hint_text: "Bio"
                            multiline: True
                Label:
                    id: spaceer
                    size_hint_y: None
                    height: dp(10)
                BoxLayout:
                    orientation: 'vertical'
                    spacing: 20
                    padding: 20
                    MDFillRoundFlatIconButton:
                        id: btn_upload
                        text: 'Upload art'
                        icon: 'upload'
                        pos_hint: {'center_x':.5, 'center_y': .15}
                        #md_bg_color: 0,1,0,1
                        on_release: root.upload_art()
                    Label:
                        id: spaceer
                        size_hint_y: None
                        height: dp(20)
                    MDFillRoundFlatIconButton:
                        id: btn_edit
                        text: 'Confirm'
                        icon: 'thumb-up'
                        pos_hint: {'center_x':.5, 'center_y': .15}
                        md_bg_color: 0,1,0,1
                        on_release: root.update_profile()

                    MDFillRoundFlatIconButton:
                        id: btn_cancel
                        text: 'Cancel'
                        icon: 'cancel'
                        pos_hint: {'center_x':.5, 'center_y': .15}
                        md_bg_color: 1,0,0,1
                        on_release:root.cancel_clicked()

